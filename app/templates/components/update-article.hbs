{{#if updateArticleForm}}
  <form>
    <div class="form-group">
      <h3>Add a New Article</h3>
      <label for="title">Title</label>
      {{input class="form-control" value=title id="title" placeholder=article.title }}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input class="form-control" value=author id="author" placeholder=article.author}}
    </div>
    <div class="form-group">
      <label for="body">Body</label>
      {{textarea class="form-control" rows=10 value=body id="body" placeholder=article.body}}
    </div>
    <div class="form-group">
      <label for="image">Image Path</label>
      {{input class="form-control" value=image id="image" placeholder=article.image}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input class="form-control" type="date" value=date id="date" placeholder=article.date}}
    </div>
    <button {{action 'update' article}} type="button" name="button">Submit</button>
  </form>
{{else}}
<button class="pull-left btn btn-success" type="button" name="button" {{action 'showArticleForm'}} >Edit</button>
{{/if}}
